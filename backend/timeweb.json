{
  "name": "monastyr-backend",
  "version": "1.0.0",
  "build": {
    "command": "npm install && npx prisma generate && npm run build",
    "output": "dist"
  },
  "start": {
    "command": "node dist/index.js"
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "UPLOAD_DIR": "/var/www/uploads"
  }
}

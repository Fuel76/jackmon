# Файл с примерами переменных окружения
# Скопируйте этот файл как .env и заполните значения

# Порт для запуска сервера
PORT=3000

# Переменные для базы данных Timeweb Cloud
DATABASE_URL="mysql://gen_user:qazxsw21@192.168.0.4:3306/default_db"

# JWT настройки
JWT_SECRET="super-secret-key-change-in-production"
JWT_EXPIRES_IN="30d"

# Загрузка файлов
UPLOAD_DIR="/app/uploads"
MAX_FILE_SIZE=10485760 # 10MB

# Ключ для регистрации администратора
ADMIN_REGISTRATION_KEY="change-this-in-production"

# URL фронтенда для CORS
FRONTEND_URL="https://your-frontend-domain.timeweb.app"

# Настройки режима приложения
NODE_ENV="production"
FRONTEND_URL="http://localhost:5173"

# Настройки режима приложения
NODE_ENV="development" # production или development

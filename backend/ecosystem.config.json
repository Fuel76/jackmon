{
  "apps": [
    {
      "name": "monastyr-backend",
      "script": "dist/index.js",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000,
        "DATABASE_URL": "postgresql://user:password@localhost:5432/monastyr",
        "JWT_SECRET": "change-this-to-secure-secret",
        "UPLOAD_DIR": "/var/www/monastyr/backend/uploads"
      }
    }
  ]
}
